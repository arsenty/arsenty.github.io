@keyframes pulsar {
	 0% {
		  transform: scale(0);
		  opacity: 1;
	 }
	 75% {
		  opacity: 1;
	 }
	 100% {
		  transform: scale(1);
		  opacity: 0;
	 }
}

@-webkit-keyframes pulsar {
	 0% {
		  -webkit-transform: scale(0);
		  opacity: 1;
	 }
	 75% {
		  opacity: 1;
	 }
	 100% {
		  -webkit-transform: scale(1);
		  opacity: 0;
	 }
}

.pulsar
	 width: 280px;
	 height: 280px;
	 margin: 0px auto;
	 position: relative;

.pulsar .ring
	 box-sizing: border-box;
	 position: absolute;
	 top: 50%;
	 left: 50%;
	 border: 5px solid rgb(255,0,0);
	//  box-shadow: inset 0 0 10px 2px rgb(255,0,0);
	 border-radius: 50%;
	 width: 100%;
	 height: 100%;
	 margin-top: -50%;
	 margin-left: -50%;
	 transform: scale(0);
	//  z-index: 888;

.pulsar .ring:nth-child(1)
	 animation: pulsar 4s 0s linear infinite

.pulsar .ring:nth-child(2)
	 animation: pulsar 4s 1s linear infinite

.pulsar .ring:nth-child(3)
	 animation: pulsar 4s 2s linear infinite

.pulsar .ring:nth-child(4)
	 animation: pulsar 4s 3s linear infinite


////////////////////////////////////////////////////////////////////////////////

#scanner {
    box-sizing: border-box;
}

@-webkit-keyframes scan {
    0% { width: 0; }
    100% { width: 100%; }
}
@keyframes scan {
    0% { left: 0; }
    100% { left: 100%; }
}

.scanner {
    height: 100%;
    width: 0;
    border-right: 2px solid rgba(0,255,0, .25);
    position: absolute;
    left: 0;
    top: 0;
    overflow: hidden;

    -webkit-animation: scan 2s infinite alternate;
    animation: scan 2s infinite alternate;
}

