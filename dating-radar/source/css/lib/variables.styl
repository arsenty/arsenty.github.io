////////////////////////////////////////////////////////////
// Nib settings and ie support
////////////////////////////////////////////////////////////
support-for-ie                              = true
vendor-prefixes                             = webkit moz o ms official
support-ie-version                          = 7



////////////////////////////////////////////////////////////
// Базовые
////////////////////////////////////////////////////////////
$base-bg-color                              = #fff
$base-font-family                           = notosans
$base-monospace-font-family                 = consolas
$base-font-color                            = #000
$base-font-size                             = 14px
$base-line-height                           = 22px



////////////////////////////////////////////////////////////
// Заголовки
////////////////////////////////////////////////////////////
$heading-font-family                        = notoserif
$heading-font-color                         = #000
$heading-h1-font-size                       = 30px
$heading-h2-font-size                       = $heading-h1-font-size - 4px
$heading-h3-font-size                       = $heading-h1-font-size - 6px
$heading-h4-font-size                       = $heading-h1-font-size - 10px
$heading-h5-font-size                       = $heading-h1-font-size - 12px
$heading-h6-font-size                       = $heading-h1-font-size - 14px



////////////////////////////////////////////////////////////
// Ссылки
////////////////////////////////////////////////////////////
$base-link-color                            = #0083ca
$base-hover-link-color                      = #ee1111
$base-visited-link-color                    = $base-link-color + 10%



////////////////////////////////////////////////////////////
// Таблицы
////////////////////////////////////////////////////////////
$table-base-font-size                       = 12px
$table-base-font-color                      = #666
$table-base-cell-align                      = left

$table-heading-font-size                    = $table-base-font-size
$table-heading-font-color                   = #222
$table-heading-border-color                 = #ccc
$table-heading-pading                       = 10px 12px 10px 0

$table-cell-pading                          = 8px 12px 8px 0
$table-cell-font-color                      = #666
$table-cell-border-color                    = #eee





////////////////////////////////////////////////////////////
// Списки
////////////////////////////////////////////////////////////
$list-marker-path                           = '../img/list-marker.gif'



////////////////////////////////////////////////////////////
// Формы
////////////////////////////////////////////////////////////
$form-base-font-size                       = 13px
$form-base-font-family                     = museosans
$form-item-padding                         = 13px

$form-label-font-size                      = 12px
$form-label-font-color                     = #646464
$form-label-font-family                    = $form-base-font-family

$form-input-height                         = 33px
$form-textarea-height                      = 150px

$form-input-border-color                   = #cdcdcd
$form-input-bg-color                       = #fff
$form-input-border-radius                  = 3px
$form-input-font-color                     = #010000
$form-input-font-size                      = $form-base-font-size
$form-input-focus-color                    = rgba(#3488ab,.75)
$form-input-error-color                    = #ff0000
$form-input-success-color                  = #3488ab
$form-input-focus-text-color               = $form-input-font-color
$form-input-padding                        = 7px

$form-input-hint-font-size                 = 11px
$form-input-hint-font-color                = #aeadad

$form-input-error-font-size                = 11px

// Чекбоксы
$form-checkbox-size                        = 14px

$form-captcha-width                        = 78px
$form-input-width                          = 427px


