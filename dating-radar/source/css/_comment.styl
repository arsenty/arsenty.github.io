.comments
	// font-size .9em
	line-height 1.25em

	a
	em
		font-style normal
		color #3b5998
		cursor pointer

	p.bar a
		color #3b5998
		margin-right 20px
		cursor pointer

	small
		display  block
		margin-top 5px

	.comment
		em
			font-weight bold

.like
	padding-left 16px
	// padding-top -1px
	background-image url('data:image/png;base64,')
	background-position left center
	background-repeat no-repeat
	background-size 13px

.comment

	.img
		// background url('comments.jpg')
		background-size 100%
		width 32px
		height 32px


$pointX = ( 0 -32px -64px -96px -128px -160px -192px -224px )

for num in (0..6)
	.comment{num} .img
		background-position left $pointX[num]

.like:after
	content '{{like}}'

.like.active:after
	content '{{unlike}}'
