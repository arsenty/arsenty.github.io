.main-menu-submenu
	max-height 70vh
	overflow-y auto

	&__list
		margin 0
		padding 0

	&__item
		list-style none
		background none
		padding 0
		font-family notosans
		a
			&
			&:visited
				display block
				padding 7px 10px
				color #414141
				text-decoration none
				transition 125ms all ease-in-out

			&:hover
				background #f2f2f5
				color #414141

			&:active
				color #2d3e60
				box-shadow inset 0 3px 5px rgba(0,0,0,0.125)

	&__item_active
		a
			&
			&:visited
				color #fff
				background #2d3e60 + 20%
