-
	function getInitials(name) {
		const names = name.split(' ');
		let initials = names[0].substring(0, 1).toUpperCase();

		if (names.length > 1) {
			initials += names[names.length - 1].substring(0, 1).toUpperCase();
		}

		return initials;
	}

mixin avatar(data)
	- var classes = [];
	if !data.image && data.title
		- classes.push('avatar_type_initials')

	.avatar&attributes(attributes)(class=classes title=data.title)
		if data.image
			img(src=data.image alt=data.title).avatar__image
		else
			if data.title
				.avatar__initials= getInitials(data.title)
